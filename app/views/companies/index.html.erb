<h1>Companies</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rif</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.rif %></td>
        <td>
          <%= link_to "Show", company_path(company) %>
          <%= link_to "Delete", company_path(company), 
            method: :delete %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to "Create company", new_company_path %>