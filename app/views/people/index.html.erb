<h1>People</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Birthday</th>
      <th>Gender</th>
      <th>Ci</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.lastname %></td>
        <td><%= person.birthday %></td>
        <td><%= person.gender %></td>
        <td><%= person.ci %></td>
        <td>
          <%= link_to "Show", person_path(person) %>
          <%= link_to "Edit", edit_person_path(person) %>
          <%= link_to "Delete", person_path(person), 
            method: :delete %>
          <%= link_to "Add Address", form_address_person_path(person) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to "Create Person", new_person_path %>